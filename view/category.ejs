<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= categoryName %> - BlogSphere
    </title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #667eea;
            --secondary-color: #764ba2;
            --accent-color: #f093fb;
            --success-color: #28a745;
            --warning-color: #ffc107;
            --danger-color: #dc3545;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            line-height: 1.6;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
        }

        /* Navbar Styles */
        .navbar {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 1.5rem;
            color: var(--primary-color) !important;
        }

        /* Floating Shapes */
        .floating-shapes {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
            z-index: 1;
        }

        .shape {
            position: absolute;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
            animation: float 6s ease-in-out infinite;
        }

        .shape:nth-child(1) {
            width: 80px;
            height: 80px;
            top: 20%;
            left: 10%;
            animation-delay: 0s;
        }

        .shape:nth-child(2) {
            width: 120px;
            height: 120px;
            top: 60%;
            right: 10%;
            animation-delay: 2s;
        }

        .shape:nth-child(3) {
            width: 60px;
            height: 60px;
            bottom: 20%;
            left: 20%;
            animation-delay: 4s;
        }

        @keyframes float {

            0%,
            100% {
                transform: translateY(0px) rotate(0deg);
            }

            50% {
                transform: translateY(-20px) rotate(180deg);
            }
        }

        /* Main Section */
        .main-section {
            position: relative;
            padding: 120px 0 60px;
            min-height: 100vh;
        }

        /* Category Header */
        .category-header {
            background: white;
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            padding: 40px;
            margin-bottom: 30px;
            position: relative;
            z-index: 2;
            text-align: center;
        }

        .category-title {
            font-size: 2.5rem;
            font-weight: bold;
            color: #2c3e50;
            margin-bottom: 15px;
        }

        .category-subtitle {
            color: #6c757d;
            font-size: 1.1rem;
            margin-bottom: 20px;
        }

        .category-icon {
            font-size: 3rem;
            margin-bottom: 20px;
            background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .back-btn {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            border: none;
            padding: 10px 25px;
            border-radius: 25px;
            color: white;
            text-decoration: none;
            font-weight: 500;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .back-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
            color: white;
        }
        .btn-primary {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            border: none;
            padding: 12px 30px;
            border-radius: 25px;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        }

        /* Posts Section */
        .posts-section {
            background: white;
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            padding: 40px;
            position: relative;
            z-index: 2;
        }

        .posts-count {
            color: #6c757d;
            margin-bottom: 30px;
            font-size: 1.1rem;
        }

        .post-card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
            margin-bottom: 20px;
            overflow: hidden;
            height: 100%;
        }

        .post-card:hover {
            transform: translateY(-5px);
        }

        .post-image {
            height: 200px;
            object-fit: cover;
            width: 100%;
        }

        .post-content {
            padding: 25px;
        }

        .post-title {
            font-size: 1.3rem;
            font-weight: bold;
            color: #2c3e50;
            margin-bottom: 15px;
            line-height: 1.3;
        }

        .post-excerpt {
            color: #6c757d;
            margin-bottom: 20px;
            line-height: 1.6;
        }

        .post-meta {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 20px;
            color: #6c757d;
            font-size: 0.9rem;
        }

        .author-info {
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .author-avatar {
            width: 30px;
            height: 30px;
            border-radius: 50%;
            object-fit: cover;
        }

        .read-more-btn {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            border: none;
            padding: 10px 25px;
            border-radius: 25px;
            color: white;
            text-decoration: none;
            font-weight: 500;
            transition: all 0.3s ease;
            display: inline-block;
        }

        .read-more-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
            color: white;
        }

        .no-posts {
            text-align: center;
            padding: 60px 20px;
            color: #6c757d;
        }

        .no-posts i {
            font-size: 4rem;
            margin-bottom: 20px;
            color: #dee2e6;
        }

        .no-posts h4 {
            color: #2c3e50;
            margin-bottom: 15px;
        }

        /* Footer */
        .footer {
            background: #2c3e50;
            color: white;
            padding: 50px 0 20px;
            margin-top: 80px;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .category-header {
                padding: 30px 20px;
            }

            .category-title {
                font-size: 2rem;
            }

            .posts-section {
                padding: 30px 20px;
            }

            .post-content {
                padding: 20px;
            }
        }

        @media (max-width: 576px) {
            .main-section {
                padding: 100px 0 40px;
            }

            .category-title {
                font-size: 1.8rem;
            }

            .post-meta {
                flex-direction: column;
                align-items: flex-start;
                gap: 10px;
            }
        }

        .like-btn {
            text-decoration: none !important;
            box-shadow: none !important;
            outline: none !important;
            border: none !important;
            background: transparent !important;
            display: flex;
            align-items: center;
            gap: 0.4rem;
            cursor: pointer;
        }

        .like-count {
            font-size: 1.3rem;
            margin-left: 0.2rem;
        }
    </style>
</head>

<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/"><i class="fas fa-blog"></i> BlogSphere</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                </ul>
                <div class="d-flex align-items-center gap-3">
                    <!-- Search Icon -->
                    <a href="/search" class="btn btn-link" aria-label="Search">
                        <i class="fas fa-search fa-lg"></i>
                    </a>
                    <!-- Notification Icon -->
                    <button type="button" class="btn btn-link position-relative dropdown-toggle"
                        id="notificationDropdown" data-bs-toggle="dropdown" aria-expanded="false"
                        aria-label="Notifications">
                        <i class="fas fa-bell fa-lg"></i>
                        <% if (user && user.notifications && user.notifications.filter(n=> !n.read).length > 0) { %>
                            <span
                                class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger"
                                style="font-size:0.7rem;">
                                <%= user.notifications.filter(n=> !n.read).length %>
                            </span>
                            <% } %>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end p-2" aria-labelledby="notificationDropdown"
                        style="min-width: 300px; max-width: 350px; max-height: 350px; overflow-y: auto; margin-right: 50px;">
                        <% if (user && user.notifications && user.notifications.length> 0) { %>
                            <% user.notifications.slice(-5).reverse().forEach(notification=> { %>
                                <li class="dropdown-item <%= notification.read ? '' : 'fw-bold' %>">
                                    <%= notification.text %>
                                        <br>
                                        <small class="text-muted">
                                            <%= new Date(notification.createdAt).toLocaleString() %>
                                        </small>
                                </li>
                                <% }) %>
                                    <li>
                                        <hr class="dropdown-divider">
                                    </li>
                                    <li><button class="dropdown-item text-center text-primary" id="markAllReadBtn">Mark
                                            all as read</button></li>
                                    <% } else { %>
                                        <li class="dropdown-item text-muted">No notifications</li>
                                        <% } %>
                    </ul>
                    <% if (typeof user !=='undefined' && user) { %>
                        <div class="dropdown">
                            <button class="btn btn-outline-primary dropdown-toggle" type="button"
                                data-bs-toggle="dropdown">
                                <i class="fas fa-user"></i>
                                <%= user.username %>
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/user/dashboard"><i
                                            class="fas fa-tachometer-alt"></i> Dashboard</a></li>
                                <li><a class="dropdown-item" href="/user/profile"><i class="fas fa-user-cog"></i>
                                        Profile</a>
                                </li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li><a class="dropdown-item" href="/user/logout"><i class="fas fa-sign-out-alt"></i>
                                        Logout</a></li>
                            </ul>
                        </div>
  <% } else { %>
                            <a href="/user/login" class="btn btn-primary" style="margin-right: 5px;">Login</a>
                            <a href="/user/signup" class="btn btn-primary">Sign Up</a>
                            <% } %>
                </div>
            </div>
          </div>
    </nav>

    <!-- Main Section -->
    <section class="main-section">
        <!-- Floating shapes background -->
        <div class="floating-shapes">
            <div class="shape"></div>
            <div class="shape"></div>
            <div class="shape"></div>
        </div>

        <div class="container">
            <!-- Category Header -->
            <div class="category-header">
                <div class="category-icon">
                    <% if (categoryName==='Technology' ) { %>
                        <i class="fas fa-microchip"></i>
                        <% } else if (categoryName==='Lifestyle' ) { %>
                            <i class="fas fa-heart"></i>
                            <% } else if (categoryName==='Travel' ) { %>
                                <i class="fas fa-plane"></i>
                                <% } else if (categoryName==='Food' ) { %>
                                    <i class="fas fa-utensils"></i>
                                    <% } else { %>
                                        <i class="fas fa-tag"></i>
                                        <% } %>
                </div>
                <h1 class="category-title">
                    <%= categoryName %>
                </h1>
                <p class="category-subtitle">Discover amazing content in the <%= categoryName.toLowerCase() %> category
                </p>
                <a href="/" class="back-btn">
                    <i class="fas fa-arrow-left"></i>
                    Back to Home
                </a>
    </div>

            <!-- Posts Section -->
            <div class="posts-section">
                <div class="posts-count">
                    <% if (posts && posts.length> 0) { %>
                        Found <strong>
                            <%= posts.length %>
                        </strong> post<%= posts.length===1 ? '' : 's' %> in <%= categoryName %>
                                <% } else { %>
                                    No posts found in <%= categoryName %>
  <% } %>
</div>

                <% if (posts && posts.length> 0) { %>
                    <div class="row">
                        <% posts.forEach(post=> { %>
                            <div class="col-lg-4 col-md-6 mb-4">
                                <div class="card post-card">
                                    <img src="<%= post.image || '/images/default-post.jpg' %>" class="post-image"
                                        alt="<%= post.title %>"
                                        onerror="this.onerror=null;this.src='/images/default-post.jpg';">
                                    <div class="post-content">
                                        <h5 class="post-title">
                                            <%= post.title %>
                                        </h5>

                                        <p class="post-excerpt">
                                            <%= post.content ? (post.content.length> 120 ? post.content.substring(0,
                                                120) + '...' : post.content) : 'No content available' %>
                                        </p>

                                        <div class="post-meta">
                                            <div class="author-info">
                                                <img src="<%= post.author && post.author.profileImageURL ? post.author.profileImageURL : '/images/man-avatar.jpg' %>"
                                                    alt="<%= post.author && post.author.username ? post.author.username : 'Unknown' %>"
                                                    class="author-avatar"
                                                    onerror="this.onerror=null;this.src='/images/man-avatar.jpg';">
                                                <span>
                                                    <%= post.author && post.author.username ? post.author.username
                                                        : 'Unknown Author' %>
                                                </span>
                                            </div>
                                            <div class="d-flex gap-2 align-items-center">
                                                <button class="btn btn-link p-0 like-btn d-flex align-items-center"
                                                    data-post-id="<%= post._id %>"
                                                    data-logged-in="<%= user ? 'true' : 'false' %>"
                                                    aria-label="Like post">
                                                    <i class="fa fa-heart <%= post.likes && user && post.likes.includes(user._id) ? 'text-danger' : 'text-muted' %>"
                                                        style="font-size: 1.3rem;"></i>
                                                    <span class="like-count ms-1">
                                                        <%= post.likes ? post.likes.length : 0 %>
                                                    </span>
                                                </button>
                                            </div>
                                        </div>

                                        <a href="/posts/<%= post._id %>" class="read-more-btn">
                                            <i class="fas fa-arrow-right me-2"></i>Read More
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                    </div>
                    <% } else { %>
                        <div class="no-posts">
                            <i class="fas fa-newspaper"></i>
                            <h4>No posts in this category yet</h4>
                            <p>Be the first to share a <%= categoryName.toLowerCase() %> story!</p>
                            <% if (typeof user !=='undefined' && user) { %>
                                <a href="/user/dashboard" class="read-more-btn">
                                    <i class="fas fa-plus me-2"></i>Create Post
                                </a>
                                <% } else { %>
                                    <a href="/user/signup" class="read-more-btn">
                                        <i class="fas fa-user-plus me-2"></i>Join and Write
                                    </a>
                                    <% } %>
                        </div>
                        <% } %>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h5><i class="fas fa-blog me-2"></i>BlogSphere</h5>
                    <p>Share your stories, connect with writers, and discover amazing content from around the world.</p>
                </div>
                <div class="col-md-4">
                    <h5>Quick Links</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-light">About Us</a></li>
                        <li><a href="#" class="text-light">Contact</a></li>
                        <li><a href="#" class="text-light">Privacy Policy</a></li>
                        <li><a href="#" class="text-light">Terms of Service</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5>Connect With Us</h5>
                    <div class="d-flex gap-3">
                        <a href="#" class="text-light"><i class="fab fa-facebook fa-2x"></i></a>
                        <a href="#" class="text-light"><i class="fab fa-twitter fa-2x"></i></a>
                        <a href="#" class="text-light"><i class="fab fa-instagram fa-2x"></i></a>
                        <a href="#" class="text-light"><i class="fab fa-linkedin fa-2x"></i></a>
                    </div>
                </div>
            </div>
            <hr class="my-4">
            <div class="text-center">
                <p>&copy; 2025 BlogSphere. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script>
        // Navbar background change on scroll
        window.addEventListener('scroll', function () {
            const navbar = document.querySelector('.navbar');
            if (window.scrollY > 50) {
                navbar.style.background = 'rgba(255, 255, 255, 0.98)';
            } else {
                navbar.style.background = 'rgba(255, 255, 255, 0.95)';
            }
        });

        // Add animation to elements when they come into view
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver(function (entries) {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, observerOptions);

        // Observe elements for animation
        document.addEventListener('DOMContentLoaded', function () {
            const animatedElements = document.querySelectorAll('.category-header, .posts-section, .post-card');

            animatedElements.forEach(el => {
                el.style.opacity = '0';
                el.style.transform = 'translateY(20px)';
                el.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
                observer.observe(el);
            });
        });

        // Like button functionality
        function updateLikeUI(btn, liked, count) {
            const icon = btn.querySelector('i');
            const countSpan = btn.querySelector('.like-count');
            if (liked) {
                icon.classList.add('text-danger');
                icon.classList.remove('text-muted');
            } else {
                icon.classList.remove('text-danger');
                icon.classList.add('text-muted');
            }
            countSpan.textContent = count;
        }

        document.querySelectorAll('.like-btn').forEach(btn => {
            btn.addEventListener('click', function (e) {
                e.preventDefault();
                const postId = this.getAttribute('data-post-id');
                const isLoggedIn = this.dataset.loggedIn === "true";

                if (!isLoggedIn) {
                    window.location.href = "/user/login";
                    return;
                }
                fetch(`/posts/${postId}/like`, {
                    method: 'POST',
                    credentials: 'same-origin',
                    headers: {
                        'Content-Type': 'application/json',
                        'Accept': 'application/json'
                    }
                })
                    .then(res => res.json())
                    .then(data => {
                        if (typeof data.likes !== 'undefined') {
                            // Use the icon's current state to determine if it was liked before
                            const icon = this.querySelector('i');
                            // If it was not liked (gray), now it should be liked (red)
                            const wasLiked = icon.classList.contains('text-danger');
                            // Toggle the state: if it was liked, now it's not; if not, now it is
                            updateLikeUI(this, !wasLiked, data.likes);
                        }
                    });
            });
        });
    </script>
</body>

</html>
